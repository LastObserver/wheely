$headerBgColor = #673AB7
$contentBgColor = #ffffff
$itemBgColor = $headerBgColor
$itemTextColor = #ffffff
$itemBorderColor = #212121
$titleColor = #212121
$bodyColor = lighten(#BDBDBD,20)
$mainFont = 'Roboto', sans-serif;
$titleFont = 'Fugaz One', cursive;
$contentShadow = 0 6px 10px #ccc

body
	margin 0
	background-color $bodyColor
	
.button
	&_go
		background-color $itemBgColor
		padding 10px 0 10px 0
		text-align center
		color $itemTextColor
		text-decoration none
		font-family $mainFont
		font-size 20px
		width 230px
		display block
		margin 0 auto 0 auto
		box-shadow 0 2px 4px #ccc
		transition transform 0.2s ease-out
		&:hover
			transform scale(1.2,1.2)
	&_back
		margin 0
		left -60px
		top 100px
		position absolute
		display block
		width 60px
		height 80px
		background-color $itemBgColor
		font-size 40px
		color #ffffff
		text-align center
		line-height 80px
		vertical-align middle
		box-shadow 0 6px 10px #ccc
	
.header
	height 60px
	text-align center
	background-color $headerBgColor
	width 100%
	top 0 
	position fixed
	z-index 10
	font-size 40px
	line-height 60px
	vertical-align middle
	color #ffffff
	&__title
		font-size 40px
		color #ffffff
		font-family $titleFont
		user-select none
		text-decoration none
	

.container
	padding 40px 0 40px 0
	margin-top 60px
	// margin-bottom 60px
	
.content
	background-color $contentBgColor
	width: 800px
	padding: 20px
	margin 0 auto 0 auto
	display block
	box-shadow $contentShadow
	position relative
	&_generations
		margin 0 auto 20px auto
		padding 0 20px 20px 20px
		overflow auto

.title
	font-family $mainFont
	// font-size 30px
	width 100%
	text-align center
	color $titleColor

.list-wrapper
	padding-left 30px

.list-title
	font-size 18px
	font-family $mainFont
	font-weight 600

.list
	padding 0 30px 0 30px
	margin 0 auto 30px auto
	list-style none
	&._years, &._filter
		padding 0
	&__item
		display: inline-block
		margin 12px
		transition transform 0.2s ease-out
		&:hover
			transform scale(1.1,1.1)
		&._models
			margin 12px 0 12px 0
			width 33%
			display inline-block
		&._sort
			margin 10px 1px 20px 1px
		&._title
			width 100%
			margin 0
			&:hover
				transform none
		&._years
			margin 0 16px 20px 0
	&__text
		padding 5px 20px 5px 20px
		text-decoration none
		font-size 16px
		text-transform uppercase
		color $itemTextColor
		background-color $itemBgColor
		box-shadow 0 2px 4px #ccc
		font-family $mainFont
		transition background-color 0.2s ease-out
		&:hover
			background-color #FF5252
			// background-color #512DA8
		&._sort
			padding 4px 6px 4px 6px
		&.active
			background-color #FF5252
	&__title
		font-size 16px
		color $titleColor
		font-family $mainFont
		font-weight 600
	
h2,h3
	font-family $mainFont
	
.bodies
	width 100%
	&__container
		position relative
		margin 0 5px 20px 5px
		display inline-block
		overflow hidden
		box-sizing content-box
		&:hover .bodies__caption
			opacity 0
			transform translateY(30px)
	&__img
		width 230px
		display block
	&__caption
		transition all 0.3s ease-out
		opacity 1
		position absolute
		left 0
		bottom 0
		background-color rgba($itemBgColor,0.8)
		padding-top 10px
		padding-bottom 10px 
		color #ffffff
		width 230px
		font-size 20px
		line-height 30px
		vertical-align middle
		font-family $mainFont
		text-align center
	
.years
	width 100%
	padding 0 right bottom left

.general
	width 840px
	margin 0 auto 20px auto
	padding 20px 0 20px 0
	background-color #ffffff
	overflow auto
	box-shadow $contentShadow
	font-family $mainFont
	&__title
		text-align center
		margin 0
		padding 0 20px 0 20px
		
.images
	width 100%
	font-size 0
	position relative
	&__wrapper
		max-width 780px
		position relative
		left 0px
		right 0px
		margin auto
		text-align center
	&__container
		margin-right 10px
		margin-bottom 10px
		display inline-block
		&:last-child
			margin-right 0
	&__image
		width 250px
		display block
		
.car
	width 740px
	margin 0 auto 20px auto
	background-color #ffffff
	overflow auto
	padding 0 20px 20px 20px
	box-shadow $contentShadow
	&__title
		padding-left 40px

.market
	&__titlebox
		width 800px
		margin 0 auto 20px auto
		background-color $itemBgColor
		overflow auto
		padding 20px 20px 20px 20px
		box-shadow $contentShadow
	&__title
		margin 0
		color white
		width 100%
		text-align center
		font-size 40px
		line-height 50px
		vertical-align middle
		user-select none
		cursor default
	&__subtitle
		color #ffffff
		width 100%
		text-align center
		font-size 20px
		font-family $mainFont
		display inline-block
		
.specs
	list-style none
	float left
	margin 0
	&__item
		margin-bottom 10px
		font-family $mainFont
		font-size 16px
	&__name
		font-weight 600
		
.tires
	float right
	& tr:nth-child(2n+3)
		background-color #D1C4E9
	& tr:first-child
		background-color $itemBgColor
		color #ffffff
	&__head
		font-family $mainFont
		width 120px
		padding 4px
	&__item
		font-family $mainFont
		text-align center
		
.notfound
	font-family $mainFont
	&__title
		width 100%
		text-align center
	&__link
		display block
		width 300px
		margin 0 auto 0 auto
		text-align center