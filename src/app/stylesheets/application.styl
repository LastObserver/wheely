$bckColor = #ffffff
$itmBckColor = #673AB7
$itmTxtColor = #ffffff
$itmBrdrColor = #212121
$hdrColor = #673AB7
$font = 'Roboto', sans-serif;
$fontTitle = 'Fugaz One', cursive;
$titleColor = #212121
$bodyColor = lighten(#BDBDBD,20)
$contentShadow = 0 6px 10px #ccc

body
	margin 0
	background-color $bodyColor
	
.button
	&_back
		margin 0
		left -60px
		top 100px
		position absolute
		display block
		width 60px
		height 80px
		background-color $itmBckColor
		font-size 40px
		color #ffffff
		text-align center
		line-height 80px
		vertical-align middle
		box-shadow 0 6px 10px #ccc
	
.header
	height 60px
	text-align center
	background-color $hdrColor
	width 100%
	top 0 
	position fixed
	z-index 10
	font-size 40px
	line-height 60px
	vertical-align middle
	color #ffffff
	&__title
		font-size 40px
		color #ffffff
		font-family $fontTitle
		user-select none
		text-decoration none
		
.getstarted
	background-color $itmBckColor
	padding 10px 0 10px 0
	text-align center
	color $itmTxtColor
	text-decoration none
	font-family $font
	font-size 20px
	width 200px
	display block
	margin 0 auto 0 auto
	box-shadow 0 2px 4px #ccc
	transition transform 0.2s ease-out
	&:hover
		transform scale(1.2,1.2)
	

.container
	padding 40px 0 40px 0
	margin-top 60px
	// margin-bottom 60px
	
.content
	background-color $bckColor
	width: 800px
	padding: 20px
	margin 0 auto 0 auto
	display block
	box-shadow $contentShadow
	position relative
	&._itemed
		background-color $bodyColor
		box-shadow none
		width 840px

.title
	font-family $font
	// font-size 30px
	width 100%
	text-align center
	color $titleColor

.list
	list-style none
	&._years
		padding 0
	&__item
		display: inline-block
		margin 12px
		transition transform 0.2s ease-out
		&:hover
			transform scale(1.1,1.1)
		&._models
			margin 12px 0 12px 0
			width 33%
			display inline-block
		&._sort
			margin 10px 1px 20px 1px
		&._title
			width 100%
			margin 0
			&:hover
				transform none
		&._years
			margin 0 16px 20px 0
	&__text
		padding 5px 20px 5px 20px
		text-decoration none
		font-size 16px
		text-transform uppercase
		color $itmTxtColor
		background-color $itmBckColor
		box-shadow 0 2px 4px #ccc
		font-family $font
		transition background-color 0.2s ease-out
		&:hover
			background-color #FF5252
			// background-color #512DA8
		&._sort
			padding 4px 6px 4px 6px
		&.active
			background-color #FF5252
	&__title
		font-size 16px
		color $titleColor
		font-family $font
		font-weight 600
		



.generation
	width 740px
	margin 0 auto 20px auto
	background-color #ffffff
	overflow auto
	padding 0 20px 20px 20px
	box-shadow $contentShadow
	
h2,h3
	font-family $font
	
.bodies
	width 100%
	&__container
		position relative
		margin 0 5px 20px 5px
		display inline-block
		overflow hidden
		box-sizing content-box
		&:hover .bodies__caption
			opacity 0
			transform translateY(30px)
	&__img
		width 230px
		display block
	&__caption
		transition all 0.3s ease-out
		opacity 1
		position absolute
		left 0
		bottom 0
		background-color rgba($itmBckColor,0.8)
		padding-top 10px
		padding-bottom 10px 
		color #ffffff
		width 230px
		font-size 20px
		line-height 30px
		vertical-align middle
		font-family $font
		text-align center
	
.years
	width 100%
	padding 0 right bottom left

.general
	width 840px
	margin 0 auto 20px auto
	background-color #ffffff
	overflow auto
	padding 0 0px 20px 0px
	box-shadow $contentShadow
	font-family $font
	&__title
		width 100%
		text-align center
		
.images
	padding 10px 0 10px 0
	width 100%
	background-color $itmBckColor
	font-size 0
	position relative
	&__wrapper
		max-width 780px
		position relative
		left 0px
		right 0px
		margin auto
		text-align center
	&__container
		margin-right 10px
		display inline-block
		&:last-child
			margin 0
	&__image
		width 250px
		display block
		
.car
	width 740px
	margin 0 auto 20px auto
	background-color #ffffff
	overflow auto
	padding 0 20px 20px 20px
	box-shadow $contentShadow
	&__title
		padding-left 40px

.market
	&__titlebox
		width 800px
		margin 0 auto 20px auto
		background-color $itmBckColor
		overflow auto
		padding 20px 20px 20px 20px
		box-shadow $contentShadow
	&__title
		margin 0
		color white
		width 100%
		text-align center
		font-size 40px
		line-height 50px
		vertical-align middle
		user-select none
		cursor default
	&__subtitle
		color #ffffff
		width 100%
		text-align center
		font-size 20px
		font-family $font
		display inline-block
		
.specs
	list-style none
	float left
	margin 0
	&__item
		margin-bottom 10px
		font-family $font
		font-size 16px
	&__name
		font-weight 600
		
.tires
	float right
	& tr:nth-child(2n+3)
		background-color #D1C4E9
	& tr:first-child
		background-color $itmBckColor
		color #ffffff
	&__head
		font-family $font
		width 120px
		padding 4px
	&__item
		font-family $font
		text-align center